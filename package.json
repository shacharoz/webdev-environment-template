   "dependencies": {
    "node-sass-chokidar": "^4.0.0",
    "postcss": "^8.0.0",
    "autoprefixer": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "chokidar": "^3.0.0"
  },
  "devDependencies": {}
}
